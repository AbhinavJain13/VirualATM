<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    xmlns:app="http://schemas.android.com/tools"
    >



    <android.support.v7.widget.CardView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:layout_marginRight="5dp"
        android:layout_marginLeft="5dp"
        android:elevation="10dp"
        app:cardCornerRadius="2dp"
        >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:orientation="vertical"
            android:background="#6CA6CD"
            >

            <EditText
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:background="@drawable/edit_text_shape"
                android:layout_marginTop="20dp"
                android:hint="Card Number"
                android:padding="3dp"
                android:id="@+id/edtCardNumber"
                android:inputType="number"
                />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="20dp"
                >

                <EditText
                    android:layout_width="50dp"
                    android:layout_height="wrap_content"
                    android:background="@drawable/edit_text_shape"
                    android:hint="V"
                    android:padding="3dp"
                    android:id="@+id/fromMonth"
                    android:inputType="number"
                    />
                <EditText
                    android:layout_width="50dp"
                    android:layout_height="wrap_content"
                    android:background="@drawable/edit_text_shape"
                    android:hint="F"
                    android:padding="3dp"
                    android:id="@+id/fromYear"
                    android:inputType="number"
                    />

                <EditText
                    android:layout_width="50dp"
                    android:layout_height="wrap_content"
                    android:background="@drawable/edit_text_shape"
                    android:layout_marginLeft="15dp"
                    android:hint="V"
                    android:padding="3dp"
                    android:id="@+id/toMonth"
                    android:inputType="number"
                    />

                <EditText
                    android:layout_width="50dp"
                    android:layout_height="wrap_content"
                    android:background="@drawable/edit_text_shape"
                    android:hint="T"
                    android:padding="3dp"
                    android:id="@+id/toYear"
                    android:inputType="number"
                    />

                <EditText
                    android:layout_width="70dp"
                    android:layout_height="wrap_content"
                    android:background="@drawable/edit_text_shape"
                    android:layout_marginLeft="15dp"
                    android:hint="Cvv"
                    android:padding="3dp"
                    android:id="@+id/cvv"
                    android:inputType="number"
                    />



            </LinearLayout>

            <EditText
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:background="@drawable/edit_text_shape"
                android:layout_marginTop="20dp"
                android:hint="Name"
                android:layout_marginBottom="20dp"
                android:padding="3dp"
                android:id="@+id/name"
                />

        </LinearLayout>

    </android.support.v7.widget.CardView>

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="20dp"
        android:layout_marginRight="5dp"
        android:layout_marginLeft="5dp"
        >
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Generate Pin"
            android:id="@+id/btnGeneratePin"
            android:background="@drawable/button_round"
            android:padding="3dp"
            android:layout_alignParentRight="true"
            android:textColor="#6CA6CD"
            />
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/button_round"
            android:padding="3dp"
            android:text="Open Saved Card"
            android:id="@+id/btnOpenCard"
            android:layout_centerHorizontal="true"
            android:textColor="#6CA6CD"

            />


        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/button_round"
            android:padding="3dp"
            android:text="Save Card"
            android:id="@+id/btnSaveCard"
            android:textColor="#6CA6CD"
            />

    </RelativeLayout>




    <TextView
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:id="@+id/txtPinGenerated"
        android:visibility="gone"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="15dp"
        android:textSize="20dp"
        />

</LinearLayout>
